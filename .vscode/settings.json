{
  // Automatically detects and configures ESLint for each workspace directory
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // Enables Tailwind CSS IntelliSense for these naming patterns.
  // These patterns allow for props like `headerClassName=`, `titleTextClassName=` or variables like `const textStyles = ...`
  "tailwindCSS.classAttributes": [".*className", ".*ClassName", ".*Styles.*"],
  // Sets Prettier as the default formatter for all files
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Runs ESLint on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}
