{
  // Automatically detects and configures ESLint for each workspace directory
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // Sets Prettier as the default formatter for all files
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Runs ESLint on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}
