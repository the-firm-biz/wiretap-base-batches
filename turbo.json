{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_GIT_COMMIT_REF",

    "FLY_APP_NAME",
    "FLY_MACHINE_ID",

    "NEXT_PUBLIC_REOWN_PROJECT_ID",
    "NEXT_PUBLIC_ALCHEMY_API_KEY",
    "NEXT_PUBLIC_KERNEL_VALIDATOR_ADDRESS",
    "NEXT_PUBLIC_ONCHAINKIT_API_KEY",

    "SIWE_JWT_SECRET",
    "ZERODEV_RPC",
    "KERNEL_VALIDATOR_PRIVATE_KEY",
    "SESSION_KEY_ENCRYPTION_SECRET",

    "DATABASE_URL",
    "NEYNAR_API_KEY",
    "GLIDER_API_KEY",
    "SERVER_ALCHEMY_API_KEY",

    "IS_SLACK_NOTIFICATION_ENABLED",
    "SLACK_ESPIONAGEBOT_TOKEN",
    "SLACK_INFRABOT_TOKEN",
    "WIRETAP_NOTIFICATIONS_CHANNEL_ID",
    "INFRA_NOTIFICATIONS_CHANNEL_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^build", "^lint"]
    },
    "ts:check": {
      "dependsOn": ["^build", "^ts:check"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:migration": {
      "dependsOn": ["@wiretap/db#ts:check"],
      "cache": false
    },
    "db:migration-generate": {
      "dependsOn": ["@wiretap/db#ts:check"],
      "cache": false
    },
    "db:migration-push": {
      "cache": false
    },
    "test-db:migration": {
      "dependsOn": ["@wiretap/db#ts:check"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["^build", "^test"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
